.notices-add {
  padding: 0 0.5rem
  margin-bottom: 1rem
  form {
    display: flex
    flex-wrap wrap
    align-items: center
    justify-content: flex-start
  }
  &__label {
    flex: 0 0 100%
    max-width: 100%
    display: flex
    flex-wrap wrap
    margin-bottom: 1rem
  }
  &__title, &__description {
    font-size: 14px
    font-style: italic
    flex: 0 0 100%
    max-width: 100%
    margin-bottom: 0.25rem
  }
  &__textarea, &__input {
    -webkit-border-radius: 2px
    -moz-border-radius: 2px
    border-radius: 2px
    border: none
    font-size: 14px
    flex: 0 0 100%
    max-width: 100%
    height: 20px
    resize: none
    padding: 1rem
  }
  &__textarea {
    height: 50px
  }
  .notices-add-submit {
    border: none;
    border-bottom: 2px solid #8b8b8b;
    height: 30px;
    flex: 0 0 100%;
    max-width: 100%
  }
}
