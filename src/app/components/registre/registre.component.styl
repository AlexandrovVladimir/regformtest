.form {
  max-width: 200px
  margin: auto
  &__row {
    padding: 1rem 0
    input {
      border: none
      border-bottom: 2px solid #8b8b8b
      height: 30px
      min-width: 200px
      padding: 5px
    }
    label {
      display: block
      font-size: 14px
      margin-bottom: 5px
      text-transform: lowercase
      &.remember-password {
        display: flex
        align-items: center
        justify-content: flex-start
      }
      .remember-password {
        &--input {
          min-width 15px !important
          height: 15px !important
          padding: 0
          margin: 0
          margin-right: 1rem
        }
        &--text{
          color: #333
          display: inline-block
          font-size: 12px
        }
      }
    }
    select {
      border: none
      border-bottom: 2px solid #8b8b8b
      height: 30px
      min-width: 200px
      padding: 5px
    }
    .form-submit {
      cursor: pointer
      font-size: 14px
      padding: 5px 20px
    }
  }
}
.form-errors {
  color: red
  font-size: 12px
}
