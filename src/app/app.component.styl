.container {
  max-width: 960px
  margin: auto
  &__text {
    color: plum
    font-size 21px
    font-weight: bold
    font-style: italic
    padding: 1rem
    text-align: center
    text-transform: uppercase
    transition: all 0.3s linear
  }
}
.header, .footer {
  height: 60px
  background-color: #5c5c5c
  padding: 1rem
}
.header {
  display: flex
  align-items: center
  justify-content: flex-start
  &__link {
    color: #00BBD3
    font-weight: bold
    font-size: 21px
    letter-spacing 2px
    display: inline-block
    text-decoration: none
    text-transform: uppercase
  }
}
.footer {
  position: fixed
  bottom: 0
  left: 0
  width: 100%
}
.list {
  list-style none
  padding: 0
  display: flex
  align-items: center
  justify-content: flex-start
  width: 100%
  &__item {
    cursor: pointer
    margin-right: 1rem
    &.disabled {
      cursor: not-allowed
    }
  }
  &__link {
    display: block
    color: #000
    font-weight: bold
    text-decoration: none
    text-transform: uppercase
    transition all 0.3s linear
    &.disabled {
      cursor: not-allowed
      opacity: 0.5
      pointer-events none
    }
    &_login {
      color: forestgreen
    }

    &:hover {
      color: #00bbd3
      text-decoration: none
    }
    &.active {
      color: #00bbd3
    }
  }
}
